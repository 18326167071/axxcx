/* login/login/login.wxss */
.login{
  padding: 0 50rpx;
}
.all-input{
  font-size: 28rpx;
  color: #ccc;
}
.login>image{
  width: 275rpx;
  height: 104rpx;
  margin: 160rpx auto 80rpx;
  display: block;
}
/* 输入手机号 */
.login>.phone{
  width: 100%;
  height: 80rpx;
}
.login>.phone>input{
  width: 100%;
  box-sizing: border-box;
  height: 100%;
  border: 2rpx solid #e9e9e9;
  border-radius: 4rpx;
  padding: 0 20rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 80rpx;
}
/* 滑块 */
.login>.tap-line{
  width: 100%;
  height: 80rpx;
  background-color: #f2f2f2;
  border-radius: 4rpx;
  margin-top: 40rpx;
  position: relative;
}
.login>.tap-line>text{
  display: block;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 80rpx;
}
.login>.tap-line>.success{
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #44c98b;
  overflow: hidden;
  border-radius: 4rpx;
}
.login>.tap-line>.success>text{
  display: block;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
}
.login>.tap-line>.white{
  position: absolute;
  width: 96rpx;
  height: 80rpx;
  top: 0;
  background-color: #fff;
}
.login>.tap-line>.tap-item{
  position: absolute;
  width: 96rpx;
  height: 76rpx;
  border-radius: 4rpx;
  top: 2rpx;
}
.login>.tap-line>.tap-item>image{
  display: block;
  width: 100%;
  height: 100%;
}
/* 验证码 */
.login>.code{
  width: 100%;
  height: 80rpx;
  margin-top: 40rpx;
}
.login>.code>input{
  width: 350rpx;
  height: 100%;
  border-radius: 4rpx;
  border: 1px solid #e9e9e9;
  padding: 0 20rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 80rpx;
  display: block;
  float: left;
}
.login>.code>.get-code{
  display: block;
  float: right;
  width: 240rpx;
  height: 100%;
  border-radius: 4rpx;
  border: 1px solid #e9e9e9;
  color: #ccc;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
}
.login>.code>.get-code.active{
  border-color: #44c98b;
  color: #44c98b;
}
/* 确定绑定 */
.login>.btn{
  width: 100%;
  height: 92rpx;
  border-radius: 4rpx;
  margin-top: 160rpx;
  text-align: center;
  line-height: 92rpx;
  font-size: 32rpx;
  border: 1px solid #e9e9e9;
  color: #ccc;
}
.login>.btn.active{
  background-color: #44c98b;
  border: 1px solid #44c98b;
  color: #fff;
}
.login>.note{
  font-size: 24rpx;
  line-height: 1;
  color: #ccc;
  text-align: center;
  margin-top: 24rpx;
}