/* pages/aptitude/aptitude.wxss */
.aptitude-item{
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-bottom: 20rpx solid #f5f8fa;
  overflow: hidden;
}
.aptitude-item>.title{
  font-size: 32rpx;
  width: 100%;
  color: #333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  line-height: 1;
}
.aptitude-item>.content{
  margin-top: 30rpx;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 1;
}
.aptitude-item>.content>.key{
  color: #999;
  float: left;
  letter-spacing: 2rpx;
  margin-right: 12rpx;
}
.aptitude-item>.content>.val{
  color: #666;
  float: left;
}
.aptitude-item>.icon{
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1;
  background-color: #f5f8fa;
  display: block;
  float: left;
  margin-top: 30rpx;
  border-radius: 4rpx;
}