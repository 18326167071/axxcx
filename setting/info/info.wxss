/* setting/info/info.wxss */
.info{
  width: 100vw;
  height: 100vh;
  overflow-y: auto;
  background-color: #f5f8fa;
}
.info>.list{
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.info>.list>.list-item{
  height: 104rpx;
}
.info>.list>.list-item.photo{
  height: 176rpx;
}
.info>.list>.list-item:not(:last-child){
  border-bottom: 2rpx solid #e9e9e9;
}
.info>.list>.list-item>.name{
  font-size: 32rpx;
  line-height: 104rpx;
  color: #333;
  float: left;
}
.info>.list>.list-item.photo>.name{
  font-size: 32rpx;
  line-height: 176rpx;
  color: #333;
}
.info>.list>.list-item>.arrow{
  display:block;
  width:16rpx;
  height:32rpx;
  float:right;
  margin:36rpx 0 36rpx 12rpx;
}
.info>.list>.list-item.photo>.arrow{
  margin:72rpx 0 72rpx 12rpx;
}
.info>.list>.list-item>.pic{
  display: block;
  width: 96rpx;
  height: 96rpx;
  float: right;
  border-radius: 50%;
  margin: 40rpx 0;
}
.info>.list>.list-item>.vip-name{
  float:right;
  min-width:100rpx;
  text-align:right;
  line-height:104rpx;
  height:100%;
  font-size:32rpx;
  color:#666;
}
.info>.list>.list-item>.content{
  float: right;
  min-width: 100rpx;
  text-align: right;
  line-height: 104rpx;
  height: 100%;
  font-size: 32rpx;
  color: #666;
}
.info>.list>.list-item>.content image{
  display:block;
  width:16rpx;
  height:32rpx;
  float:right;
  margin:36rpx 0 36rpx 12rpx;
}
.info>.list>.list-item>.disabled{
  color: #ccc;
}
.all-input{
  font-size: 32rpx;
  color: #ccc;
}